<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidthings.lantern">
    <!-- Required for Nearby Connections -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="com.google.android.things.permission.REBOOT" />

    <!-- Required for Cast connections -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Required to set screen DPI -->
    <uses-permission android:name="com.google.android.things.permission.MODIFY_SCREEN_SETTINGS" />

    <application
        android:name=".App"
        android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">

        <uses-library android:name="com.google.android.things" />

        <activity android:name=".LaunchActivity">
            <!-- Activity launched by Android Things at startup -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.IOT_LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" >
            <!-- Activity launched by Android Studio in development -->
            <!-- LaunchActivity is skipped to prevent reboot loops while display is disconnected
                    and to improve launch time while debugging -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>